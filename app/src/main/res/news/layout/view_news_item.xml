<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/news_card_inner_space">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/news_card_inner_space">

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="@integer/news_card_category_max_lines"
            android:padding="@dimen/news_card_inner_space"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/news_card_big_text_size"
            tools:text="darwin award" />

        <ImageView
            android:id="@+id/heading_image"
            android:layout_width="@dimen/news_card_image_size"
            android:layout_height="@dimen/news_card_image_size"
            android:layout_below="@id/category"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/news_card_inner_space"
            android:contentDescription="@string/news_card_image_desription"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/heading_image"
            android:maxLines="@integer/news_card_title_max_lines"
            android:padding="@dimen/news_card_inner_space"
            android:textColor="@android:color/black"
            android:textSize="@dimen/news_card_big_text_size"
            android:textStyle="bold"
            tools:text="Tourist filmed sitting on 5m-long crocodile" />

        <TextView
            android:id="@+id/preview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/heading_image"
            android:maxLines="@integer/news_card_preview_text_max_lines"
            android:padding="@dimen/news_card_inner_space"
            android:textColor="@android:color/black"
            android:textSize="@dimen/news_card_normal_text_size"
            tools:text="It was dangerous, I know. It is a scary feeling sitting on something that could kill you in a fraction of a second, he says." />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preview_text"
            android:layout_alignParentStart="true"
            android:maxLines="@integer/news_card_date_max_lines"
            android:padding="@dimen/news_card_inner_space"
            android:textSize="@dimen/news_card_small_text_size"
            tools:text="4 hr. ago, 10:34 AM" />

    </RelativeLayout>

</android.support.v7.widget.CardView>